---
import SiteNav from "@components/SiteNav.astro";
import PageLayout from "@layouts/PageLayout.astro";
import type { Page } from "../site";
const page: Page = {
	navTitle:  "Donate",
	heroTitle:  "Donate",
	heroSubtitle:  "Make UAP Disclosure a Reality",
};
---

<PageLayout page={page}>
  <!-- Hero -->
	<style>
		/* Small screens (320px - 480px) */
		@media only screen and (max-width: 480px) {
			.hero {
				background-image: url("../assets/hero20-sm.webp");
			}
		}
		/* Medium screens (481px - 768px) */
		@media only screen and (min-width: 481px) and (max-width: 768px) {
			.hero {
				background-image: url("../assets/hero20-md.webp");
			}
		}
		/* Large screens (769px - 1024px) */
		@media only screen and (min-width: 769px) and (max-width: 1024px) {
			.hero {
				background-image: url("../assets/hero20-lg.webp");
			}
		}
		/* Extra large screens (1025px and above) */
		@media only screen and (min-width: 1025px) {
			.hero {
				background-image: url("../assets/hero20-xl.webp");
			}
		}
	</style>
  <div class="hero" data-theme="dark">
    <SiteNav/>
    <header class="container">
      <h1>{page.heroTitle}</h1>
      <p>{page.heroSubtitle}</p>
    </header>
  </div>
  <!-- ./ Hero -->

  <main class="container">
    <p>
      Express your support for the public disclosure of unidentified aerial phenomena (UAP), and indications of extraterrestrial life and technologies.
    </p>
    <p>
      Your support sends "Interstellar Alliance Social Experiment: Step Three" letters to U.S. military, scientific, and political leaders.
    </p>
    <p>
      With our collective effort, we can create a brighter, more compassionate world for all.
    </p>
    <div style="position:relative;overflow:hidden;height:1200px;width:100%;">
      <iframe title='Donation form powered by Zeffy' style='position: absolute; border: 0; top:0;left:0;bottom:0;right:0;width:100%;height:100%' src='https://www.zeffy.com/embed/donation-form/789e2e11-d51f-42e0-9c53-f4835f595567' allow="payment" allowtransparency></iframe>
    </div>
  </main>
</PageLayout>